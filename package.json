{
  "name": "promise-watch",
  "private": true,
  "license": "MIT",
  "author": "Jason Raimondi <jason@raimondi.us> (https://jasonraimondi.com)",
  "scripts": {
    "test": "jest --coverage",
    "build": "pnpm run build --recursive",
    "pub": "pnpm publish --recursive --filter=\"@promise-watch/*\" --access=public",
    "format": "prettier --write packages/**/src --write example/src --write example/runs"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "jest": "^27.5.1",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  },
  "prettier": {
    "printWidth": 120,
    "semi": true,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "all",
    "arrowParens": "avoid"
  }
}
